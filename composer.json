{
    "name": "zing/package-skeleton-laravel",
    "description": "A skeleton repository for Laravel Packages",
    "keywords": ["laravel", "package", "skeleton"],
    "license": "MIT",
    "homepage": "https://github.com/zingimmick/package-skeleton-laravel",
    "support": {
        "issues": "https://github.com/zingimmick/package-skeleton-laravel/issues",
        "source": "https://github.com/zingimmick/package-skeleton-laravel"
    },
    "authors": [
        {
            "name": "zingimmick",
            "email": "zingimmick@outlook.com",
            "homepage": "https://github.com/zingimmick"
        }
    ],
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "require": {
        "php": "^8.0",
        "illuminate/support": "^8.0 || ^9.0"
    },
    "require-dev": {
        "mockery/mockery": "~1.3.3 || ^1.4.2",
        "nunomaduro/larastan": "^1.0 || ^2.0",
        "orchestra/testbench": "^6.0 || ^7.0",
        "phpunit/phpunit": "^9.3.3",
        "zing/coding-standard": "^6.4 || ^7.0"
    },
    "autoload": {
        "psr-4": {
            "Zing\\Skeleton\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Zing\\Skeleton\\Tests\\": "tests"
        }
    },
    "scripts": {
        "lint:rector": "@fix:rector --dry-run",
        "lint:ecs": "ecs check --ansi",
        "lint:phpstan": "phpstan analyse --ansi",
        "fix:rector": "rector process --ansi",
        "fix:ecs": "@lint:ecs --fix",
        "test:phpunit": "phpunit --colors=always",
        "lint": [
            "@lint:rector",
            "@lint:ecs",
            "@lint:phpstan"
        ],
        "fix": [
            "@fix:rector",
            "@fix:ecs"
        ],
        "test": [
            "@test:phpunit"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.x-dev"
        },
        "laravel": {
            "providers": [
                "Zing\\Skeleton\\SkeletonServiceProvider"
            ],
            "aliases": {
                "Skeleton": "Zing\\Skeleton\\Facades\\Skeleton"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
